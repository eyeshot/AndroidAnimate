<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- Disabled -->
	<item android:state_enabled="false" android:drawable="@drawable/charge_noclick" />
	<!-- Non focused states -->
	<item android:state_enabled="true" android:state_focused="false"
		android:state_selected="false" android:state_pressed="false"
		android:drawable="@drawable/charge_default" />
	<item android:state_enabled="true" android:state_focused="false"
		android:state_selected="true" android:state_pressed="false"
		android:drawable="@drawable/charge_default" />

	<!-- Focused states -->
	<item android:state_enabled="true" android:state_focused="true"
		android:state_selected="false" android:state_pressed="false"
		android:drawable="@drawable/charge_click" />
	<item android:state_focused="true" android:state_selected="true"
		android:state_pressed="false" android:drawable="@drawable/charge_click" />

	<!-- Pressed -->
	<item android:state_enabled="true" android:state_pressed="true"
		android:drawable="@drawable/charge_click" />

</selector>
